{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "required": [ "stations", "legs", "stockClasses", "operators", "users" ],
    "properties": {

        "stations": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "ref", "name", "nodes" ],
                "properties": {
                    "ref": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "nodes": {
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "minimum": 0
                        }
                    }
                }
            }
        },

        "legs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "ref", "name" ],
                "properties": {
                    "ref": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "ways": {
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "minimum": 0
                        }
                    },
                    "partialWays": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [ "osmWayId", "fromNodeId", "toNodeId" ],
                            "properties": {
                                "osmWayId": {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "fromNodeId": {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "toNodeId": {
                                    "type": "integer",
                                    "minimum": 0
                                }
                            }
                        }
                    }
                }
            }
        },

        "stockClasses": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "ref", "name" ],
                "properties": {
                    "ref": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            }
        },

        "operators": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "name", "stock", "routes" ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "stock": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [ "stockClassRef", "unitNumber" ],
                            "properties": {
                                "stockClassRef": {
                                    "type": "integer"
                                },
                                "unitNumber": {
                                    "type": "integer",
                                    "minimum": 0
                                }
                            }
                        }
                    },
                    "routes": {
                        "type": "array",
                        "items": {                
                            "type": "object",
                            "required": [ "name", "stationRefs", "legRefs" ],
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "stationRefs": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer"
                                    }
                                },
                                "legRefs": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },

        "stockClasses": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "ref", "name" ],
                "properties": {
                    "ref": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            }
        },

        "users": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "name" ],
                "properties": {
                    "displayName": {
                        "type": "string"
                    },
                    "journeys": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [ "stockRef", "routeRef" ],
                            "properties": {
                                "stockRef": {
                                    "type": "integer"
                                },
                                "routeRef": {
                                    "type": "integer"
                                },
                                "fromStationRef": {
                                    "type": "integer"
                                },
                                "toStationRef": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
