{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "required": [ "stations", "legs", "stockClasses" ],
    "properties": {

        "stations": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "name", "nodes" ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "nodes": {
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "minimum": 0
                        }
                    }
                }
            }
        },

        "legs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "ways": {
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "minimum": 0
                        }
                    },
                    "partialWays": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [ "osmWayId", "fromNodeId", "toNodeId" ],
                            "properties": {
                                "osmWayId": {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "fromNodeId": {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "toNodeId": {
                                    "type": "integer",
                                    "minimum": 0
                                }
                            }
                        }
                    }
                }
            }
        },

        "stockClasses": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "name" ],
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            }
        },

        "operators": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [ "name", "stock" ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "stock": {
                        "type": "array",
                        "items": {
                            "required": [ "stockClass", "unitNumber" ],
                            "properties": {
                                "stockClass": {
                                    "type": "string"
                                },
                                "unitNumber": {
                                    "type": "integer",
                                    "minimum": 0
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
